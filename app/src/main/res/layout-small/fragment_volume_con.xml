<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ajirigunn.calsci.volume_con"
    android:background="#000">

    <ScrollView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:background="#000"
        android:layout_centerInParent="true"
        >



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/button118"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="0"
                android:layout_column="2"
                android:drawableTop="@drawable/delete"
                android:background="#000"
                android:onClick="closevolume"/>
            <EditText
                android:layout_width="100dp"
                android:minHeight="30dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/f3"
                android:layout_row="24"
                android:layout_column="0"
                android:background="#fff"
                android:hint="ft\u00B3"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/volume"
                android:id="@+id/textView8"
                android:layout_row="23"
                android:layout_column="2"
                android:textColor="#FFF" />




            <EditText
                android:layout_width="100dp"
                android:minHeight="30dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/fm3"
                android:layout_row="24"
                android:layout_column="2"
                android:hint=" m\u00B3"
                android:background="#fff"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button78"
                android:layout_row="24"
                android:layout_column="3"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:textSize="10dp"
                android:onClick="f3con"
                android:layout_marginBottom="4dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button79"
                android:layout_row="24"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset16" />

            <EditText
                android:layout_width="100dp"
                android:minHeight="30dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/i3"
                android:layout_row="25"
                android:layout_column="0"
                android:background="#FFF"
                android:hint="in\u00B3"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <EditText
                android:layout_width="100dp"
                android:minHeight="30dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/im3"
                android:layout_row="25"
                android:layout_column="2"
                android:hint="m\u00B3"
                android:background="#fff"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button80"
                android:layout_row="25"
                android:layout_column="3"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="i3con"
                android:layout_marginBottom="4dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button81"
                android:layout_row="25"
                android:layout_column="4"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:textSize="10dp"
                android:nestedScrollingEnabled="true"
                android:onClick="reset17" />
            <EditText
                android:layout_width="100dp"
                android:minHeight="30dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
