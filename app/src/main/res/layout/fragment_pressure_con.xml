<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context="com.example.ajirigunn.calsci.pressure_con">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_centerInParent="true">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button118"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="0"
                android:layout_column="2"
                android:drawableTop="@drawable/delete"
                android:background="#fff"
                android:onClick="closepressure"/>
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/pi"
                android:layout_row="34"
                android:layout_column="0"
                android:backgroundTint="#005FFF"
                android:hint="lb/in\u00B2"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/pipa"
                android:layout_row="34"
                android:layout_column="2"
                android:hint="pascal"
                android:backgroundTint="#005FFF"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button94"
                android:layout_row="34"
                android:layout_column="3"
                android:background="@drawable/btnback"
                android:textSize="10dp"
                android:textColor="#fff"
                android:onClick="picon"
                android:layout_marginBottom="4dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button95"
                android:layout_row="34"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset24" />
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/b"
                android:layout_row="35"
                android:layout_column="0"
                android:backgroundTint="#005FFF"
                android:hint="Bar"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/bp"
                android:layout_row="35"
                android:layout_column="2"
                android:hint="pascal"
                android:backgroundTint="#005FFF"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button96"
                android:layout_row="35"
                android:layout_column="3"
                android:background="@drawable/btnback"
                android:textSize="10dp"
                android:textColor="#fff"
                android:onClick="bcon"
                android:layout_marginBottom="4dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button97"
                android:layout_row="35"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset25" />
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/tr"
                android:layout_row="36"
                android:layout_column="0"
                android:backgroundTint="#005FFF"
                android:hint="torr"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/tp"
                android:layout_row="36"
                android:layout_column="2"
                android:hint="pascal"
                android:backgroundTint="#005FFF"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button98"
                android:layout_row="36"
                android:layout_column="3"
                android:background="@drawable/btnback"
                android:textSize="10dp"
                android:textColor="#fff"
                android:onClick="trcon"
                android:layout_marginBottom="4dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button99"
                android:layout_row="36"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset26" />
            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/atm"
                android:layout_row="37"
                android:layout_column="0"
                android:backgroundTint="#005FFF"
                android:hint="atm"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>



            <EditText
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/ap"
                android:layout_row="37"
                android:layout_column="2"
                android:hint="pascal"
                android:backgroundTint="#005FFF"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/pressure"
                android:id="@+id/textView10"
                android:layout_row="33"
                android:layout_column="2"
                android:textColor="#000"
                android:layout_columnSpan="2" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button100"
                android:layout_row="37"
                android:layout_column="3"
                android:background="@drawable/btnback"
                android:textSize="10dp"
                android:textColor="#fff"
                android:onClick="apcon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button101"
                android:layout_row="37"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset27" />
        </GridLayout>
    </ScrollView>

</RelativeLayout>
