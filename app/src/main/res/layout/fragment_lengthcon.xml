<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context="com.example.ajirigunn.calsci.lengthcon">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_centerInParent="true"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button118"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="0"
                android:layout_column="2"
                android:drawableTop="@drawable/delete"
                android:background="#fff"
                android:onClick="closelength"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/in"
                android:layout_row="3"
                android:layout_column="0"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:nestedScrollingEnabled="false"
                android:hint="inches"
                android:minWidth="80dp"/>

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/ft"
                android:layout_row="4"
                android:layout_column="0"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="feet(ft)"
                android:nestedScrollingEnabled="false"/>

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/incm"
                android:layout_row="3"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  cm" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/inchcon"
                android:layout_row="3"
                android:layout_column="3"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="inchcon"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/button27"
                android:layout_row="3"
                android:layout_column="4"
                android:text="@string/reset"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset"/>

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/yd"
                android:layout_row="5"
                android:layout_column="0"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="yard" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/ftm"
                android:layout_row="4"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  m" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button28"
                android:layout_row="4"
                android:layout_column="3"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="ftcon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button31"
                android:layout_row="4"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset1"/>

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/mile"
                android:layout_row="6"
                android:layout_column="0"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="mile" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/ydm"
                android:layout_row="5"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  m" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button40"
                android:layout_row="5"
                android:layout_column="3"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="ydcon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button49"
                android:layout_row="5"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset2" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/n_mile"
                android:layout_row="7"
                android:layout_column="0"
                android:autoText="false"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="n mile" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/milekm"
                android:layout_row="6"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  km" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button50"
                android:layout_row="6"
                android:layout_column="3"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="milecon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button51"
                android:layout_row="6"
                android:layout_column="4"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="reset3" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pc"
                android:layout_row="8"
                android:layout_column="0"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="parsec" />

            <EditText
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_row="7"
                android:layout_column="1"
                android:background="#fff" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/n_milem"
                android:layout_row="7"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  m" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button52"
                android:layout_row="7"
                android:layout_column="3"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="nmilecon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button53"
                android:layout_row="7"
                android:layout_column="4"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="reset4" />

            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pckm"
                android:layout_row="8"
                android:layout_column="2"
                android:backgroundTint="#005fff"
                android:digits="1234567890."
                android:hint="  km" />



            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/convert"
                android:id="@+id/button15"
                android:layout_row="8"
                android:layout_column="3"
                android:textSize="10dp"
                android:textColor="#fff"
                android:background="@drawable/btnback"
                android:onClick="pccon" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:id="@+id/button54"
                android:layout_row="8"
                android:layout_column="4"
                android:textSize="10dp"
                android:background="@drawable/btnback"
                android:textColor="#fff"
                android:onClick="reset5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/length"
                android:id="@+id/title"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="25dp"
                android:textColor="#000" />


        </GridLayout>
    </ScrollView>

</RelativeLayout>
